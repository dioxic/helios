{
  "name": "example benchmark",
  "variables": {
    "person": {
      "_id": "$int",
      "name": "$name",
      "address": {
        "city": {
          "$choose": [
            "London",
            "Belfast",
            "Madrid"
          ]
        }
      },
      "salutation": {
        "$choose": [
          "Mr",
          "Mrs",
          "Dr",
          "Master"
        ]
      },
      "favFood": {
        "$choose": [
          "Cabbage",
          "Orange",
          "Steak",
          "Swordfish"
        ]
      },
      "age": {
        "$int": {
          "min": 1,
          "max": 99
        }
      }
    }
  },
  "stages": [
    {
      "type": "parallel",
      "name": "setup",
      "workloads": [
        {
          "name": "drop people collection",
          "executor": {
            "type": "drop",
            "database": "test",
            "collection": "people"
          }
        },
        {
          "name": "drop animals collection",
          "executor": {
            "type": "drop",
            "database": "test",
            "collection": "animals"
          }
        },
        {
          "name": "drop birds collection",
          "executor": {
            "type": "drop",
            "database": "test",
            "collection": "birds"
          }
        },
        {
          "name": "drop people2 collection",
          "executor": {
            "type": "drop",
            "database": "test",
            "collection": "people2"
          }
        },
        {
          "name": "drop animals2 collection",
          "executor": {
            "type": "drop",
            "database": "test",
            "collection": "animals2"
          }
        }
      ]
    },
    {
      "type": "parallel",
      "name": "load data",
      "sync": true,
      "variables": {
        "food": {
          "$choose": [
            "Cabbage",
            "Orange",
            "Steak",
            "Swordfish"
          ]
        }
      },
      "dictionaries": {
        "stuff": {
          "type": "constant",
          "template": {
            "number": "$int",
            "altName": "$name"
          }
        }
      },
      "workloads": [
        {
          "name": "people",
          "executor": {
            "type": "insertOne",
            "database": "test",
            "collection": "people",
            "template": "$var.person"
          },
          "rate": {
            "tps": 100
          },
          "count": 500
        },
        {
          "name": "animals",
          "executor": {
            "type": "insertMany",
            "database": "test",
            "collection": "animals",
            "size": 300,
            "template": {
              "name": "$name",
              "species": "$animal",
              "number": "$dict.stuff.number"
            }
          },
          "count": 200,
          "rate": {
            "tps": 800
          }
        }
      ]
    },
    {
      "type": "sequential",
      "name": "bulk",
      "variables": {
        "birdName": "$name"
      },
      "workloads": [
        {
          "name": "bulk write birds",
          "count": 100,
          "executor": {
            "type": "bulk",
            "database": "test",
            "collection": "birds",
            "operations": [
              {
                "type": "insert",
                "count": 100,
                "template": {
                  "birdName": "$var.birdName"
                }
              },
              {
                "type": "insert",
                "count": 100,
                "template": {
                  "birdName": "$var.birdName"
                }
              }
            ]
          }
        }
      ]
    },
    {
      "type": "sequential",
      "name": "create indexes",
      "dictionaries": {
        "constants": {
          "type": "constant",
          "template": {
            "indexes": [
              {
                "key": {
                  "name": 1
                },
                "name": "name_idx"
              }
            ]
          }
        }
      },
      "workloads": [
        {
          "name": "create indexes on people",
          "executor": {
            "type": "command",
            "database": "test",
            "command": {
              "createIndexes": "people",
              "indexes": "$dict.constants.indexes"
            }
          }
        },
        {
          "name": "create indexes on animals",
          "executor": {
            "type": "command",
            "database": "test",
            "command": {
              "createIndexes": "animals",
              "indexes": "$dict.constants.indexes"
            }
          }
        }
      ]
    },
    {
      "type": "parallel",
      "name": "copy collections",
      "dictionaries": {
        "person": { "type": "query", "ns":  "test.people", "store":  true},
        "animal": { "type": "query", "ns":  "test.animals"}
      },
      "workloads": [
        {
          "name": "copy people",
          "count": 10,
          "executor": {
            "type": "insertMany",
            "database": "test",
            "collection": "people2",
            "size": 100,
            "ordered": true,
            "template": "$dict.person"
          }
        },        {
          "name": "copy animals",
          "count": 10,
          "executor": {
            "type": "insertMany",
            "database": "test",
            "collection": "animals2",
            "size": 100,
            "ordered": false,
            "template": "$dict.animal"
          }
        }
      ]
    },
    {
      "type": "parallel",
      "name": "deletes post-index",
      "disable": true,
      "workloads": [
        {
          "name": "delete people",
          "count": 100,
          "executor": {
            "type": "deleteMany",
            "database": "test",
            "collection": "people",
            "filter": {
              "age": "$var.person.age"
            }
          }
        },
        {
          "name": "delete animals",
          "count": 1000,
          "executor": {
            "type": "deleteOne",
            "database": "test",
            "collection": "people",
            "filter": {
              "name": "$name"
            }
          }
        }
      ]
    }
  ]
}
